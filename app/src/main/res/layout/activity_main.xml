<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.crocias.iak3.MainActivity">

    <ImageView
    android:id="@+id/gambar1"
    android:layout_width="match_parent"
    android:layout_height="300dp"
    android:src="@drawable/background1"
    android:scaleType="centerCrop"/>

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_above="@+id/mTextShare"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="93dp"
        android:src="@drawable/profile" />

    <TextView

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="SHARE"
        android:layout_alignBottom="@+id/gambar1"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        style="@style/title"

        android:id="@+id/mTextShare" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/mTextShare">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/mTextContent"
                android:layout_width="wrap_content"
                android:layout_height="1745dp"

                android:text="@string/content"
                android:textSize="40dp" />

        </LinearLayout>
    </ScrollView>


</RelativeLayout>
